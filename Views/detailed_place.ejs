<html>
<head>
    <%- include('bootstrap_head'); -%>
    <title><%= place.title %></title>
</head>

<body>
<%- include('header'); -%>
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header font-weight-bold"><%= place.title %> Details</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-3">
                            <h6 class="font-weight-light">Price</h6>
                        </div>
                        <div class="col-9">
                            <h6 class="font-weight-bold"><%= place.price %> $/day</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <h6 class="font-weight-light">Size</h6>
                        </div>
                        <div class="col-9">
                            <h6 class="font-weight-bold"><%= place.size %> m^2</h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <h6 class="font-weight-light">Address</h6>
                        </div>
                        <div class="col-9">
                            <h6 class="font-weight-bold"><%= place.address %></h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-3">
                            <h6 class="font-weight-light">Description</h6>
                        </div>
                        <div class="col-9">
                            <h6 class="font-weight-bold"><%= place.description%></h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>

</html>
